    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "examples/**/*"
    ],
    "rules": {
      "import/extensions": "off",
      "import/no-nodejs-modules": "off",
      "import/no-unresolved": "off",

      "spellcheck/spell-checker": [ "error", {
        "identifiers": false,
        "minLength": 3,
        "skipWords": [
          "johntalton",
